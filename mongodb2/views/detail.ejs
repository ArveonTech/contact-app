<div class="mt-10 flex justify-center text-center">
  <% if (!contact) { %>
  <div>
    <div class="p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
      <h4 class="text-2xl">Contact tidak ada.</h4>
      <a href="/contact" class="font-bold underline">&laquo;Kembali ke daftar contact</a>
    </div>
  </div>
  <% } else { %>
  <div class="block w-md p-6 border border-gray-200 rounded-lg shadow-sm bg-gray-800">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= contact.nama %></h5>
    <p class="font-normal text-gray-700 dark:text-gray-400"><%= contact.noHP %></p>
    <p class="font-normal text-gray-700 dark:text-gray-400"><%= contact.email %></p>
    <div class="block mt-5 flex gap-5 justify-center">
      <a href="/contact/edit/<%= contact.nama %>" class="bg-green-500 px-2 py-1 rounded">Ubah</a>
      <form action="/contact?_method=DELETE" method="post">
        <input type="hidden" name="nama" value="<%= contact.nama %>" />
        <button type="submit" class="bg-red-500 px-2 py-1 rounded" onclick="return confirm(`yakin?`)">Hapus</button>
      </form>
    </div>
    <button class="mt-5 text-white bg-blue-500 px-2 py-1 rounded">
      <a href="/contact">&laquo; Kembali ke daftar contact</a>
    </button>
  </div>
  <% } %>
</div>
